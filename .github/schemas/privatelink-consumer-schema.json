{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["security_group", "rules"],
  "properties": {
    "security_group": {
      "type": "object",
      "required": [
        "request_id",
        "business_justification",
        "accountId",
        "region",
        "vpc_id",
        "serviceType",
        "serviceName",
        "thirdpartyName",
        "thirdPartyID"
      ],
      "properties": {
        "request_id": { "type": ["string", "number"] },
        "business_justification": { "type": "string" },
        "accountId": { "type": "number" },
        "region": {
          "type": "string",
          "enum": ["us-west-2", "us-east-1"]
        },
        "vpc_id": {
          "type": "string",
          "pattern": "^vpc-[a-f0-9]{8,17}$"
        },
        "serviceType": { "const": "privatelink-consumer" },
        "serviceName": { "type": "string" },
        "thirdpartyName": { "type": "string" },
        "thirdPartyID": { "type": ["string", "number"] }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "request_id",
          "business_justification",
          "source",
          "protocol",
          "port",
          "appid",
          "url"
        ],
        "properties": {
          "request_id": { "type": ["string", "number"] },
          "business_justification": { "type": "string" },
          "protocol": { "type": "string", "enum": ["tcp", "udp"] },
          "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
          "appid": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "enable_palo_inspection": { "type": "boolean" },
          "source": {
            "type": "object",
            "required": ["ips"],
            "properties": {
              "account_id": { "type": "string" },
              "vpc_id": { "type": "string" },
              "region": { "type": "string" },
              "ips": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^\\d{1,3}(\\.\\d{1,3}){3}/\\d{1,2}$"
                }
              }
            }
          }
        }
      }
    }
  }
}
